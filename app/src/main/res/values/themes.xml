<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseTheme.SenSE" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/purple_500</item>-->
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimary">@color/dark_red</item>
        <item name="colorPrimaryVariant">@color/deep_red</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">sans-serif</item>
<!--        <item name="android:textSize">@dimen/large_font_size</item>-->

<!--        <item name="preferenceCategoryStyle">@style/SensePreferenceStyle</item>-->
<!--        <item name="preferenceTheme">@style/SensePreferenceStyle</item>-->
    </style>

    <style name="Theme.SenSE" parent="BaseTheme.SenSE"/>

    <!-- Splash screen to start the app with  -->
    <style name="SplashScreenTheme" parent="Theme.SenSE">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!-- Popup theme -->
    <style name="PopupTheme" parent="Theme.SenSE">
        <item name="android:background">@color/black</item>
        <item name="android:opacity">transparent</item>
        <item name="android:height">@dimen/splash_screen_height</item>
        <item name="android:layout_marginStart">@dimen/small_padding</item>
        <item name="android:layout_marginEnd">@dimen/small_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@string/basic_font</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/small_padding</item>
<!--        <item name="android:padding">@dimen/tiny_padding</item>-->
    </style>

